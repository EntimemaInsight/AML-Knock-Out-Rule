    'Building Material and Garden Equipment and Supplies Dealers': 3,
    'Food and Beverage Stores': 2,
    'Health and Personal Care Stores': 2,
    'Gasoline Stations': 2,
    'Clothing and Clothing Accessories Stores': 2,
    'Sporting and Miscellaneous Store Retailers': 2,
    'Nonstore Retailers': 3,
    'Transportation and Warehousing': 1,
    'Publishing and Broadcasting': 1,
    'Finance and Insurance': 2,
    'Real Estate': 3,
    'Rental and Leasing Services': 2,
    'Professional other than Accounting and Legal': 1,
    'Accounting or Legal Services': 2,
    'Travel Arrangement and Reservation Services': 3,
    'Educational, Medical, Social Assistance Services': 1,
    'Performing Arts and Sports': 1,
    'Amusement, Gambling, and Recreation Industries': 3,
    'Food Services and Drinking Places': 3,
    'Repair and Maintenance': 3,
    'Personal and Laundry Services': 3,
    'Religious, Grantmaking, Civic, Professional, and Similar Organizations': 3,
    'Public Administration': 1,
    'Unemployed': 2
}

citizenship_risk = high_risk_countries_dict.get(data.citizenship, 2)
industry_risk = industry_risk_levels_dict.get(data.work_industry, 1)

if data.income >= 100000:
    income_risk = 3 # Hight Risk
else:
    income_risk = 1 # Standart Risk


# Total risk calculation 
if data.aml_policially_exposed_person:
        data.total_risk = 9 # Hight Risk identifing 
else: 
    PEP_risk = 1
    data.total_risk = citizenship_risk + industry_risk + income_risk + PEP_risk

